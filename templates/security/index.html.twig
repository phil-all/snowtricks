{% extends 'base.html.twig' %}

{% block title %}
	connexion
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center" style="min-height: 100vh;">
		<form method="post" class="d-flex flex-column my-5 col-12 col-lg-6">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="text-center mb-3 font-weight-normal form-title">Connexion</h1>
			<label for="inputEmail" class="mt-5">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			<label for="inputPassword" class="mt-5">Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control mb-5" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
			
			<a href="{{ path('app_reset_password_request') }}" class="d-block text-center text-primary text-decoration-none mt-3">Mot de passe oubli√© ?</a>
		</form>		
	</div>
{% endblock %}
