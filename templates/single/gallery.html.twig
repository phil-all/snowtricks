<section class="mt-5 container-fluid">
	<div class="d-md-flex justify-content-center flex-wrap">
		{% for image in trick.images %}
			<div class="px-1 py-1 d-flex justify-content-center">
				<img src="{{ asset('uploads/') ~ image.path }}" width="320" height="208">
			</div>
		{% endfor %}
		{% for video in trick.videos %}
			<div class="px-1 py-1 d-flex justify-content-center">
				<iframe width="320" height="208" src="{{ video.path }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			</div>
		{% endfor %}
	</div>
</section>
