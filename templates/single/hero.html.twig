{% if trick.thumbnail == null %}
	{% set thumbnailPath = 'img/default.jpg' %}
{% else %}
	{% set thumbnailPath = 'uploads/' ~ trick.thumbnail.path %}
{% endif %}
<section style="height: 80vh; background-image: url('{{ asset(thumbnailPath) }}');" class="center-image d-flex flex-column text-white container-fluid p-0">
	{% if is_granted('ROLE_USER') %}
		<div class="single-hero-buttons d-flex justify-content-end p-4">
			<div class="btn-hero-button-box d-flex justify-content-between">
				<a href="{{ path('app_trick_update', {"id": trick.id, "slug": trick.slug }) }}" class="text-decoration-none">
					<button type="button" class="btn btn-primary btn-rounded">
						<i class="bi bi-pencil-fill"></i>
					</button>
				</a>
				{% include 'trick-buttons/trick-delete-button.html.twig' %}
			</div>
		</div>
	{% endif %}
	<div class="home-hero-textbox d-flex align-items-center justify-content-center">
		<h1>{{ trick.title|capitalize }}</h1>
	</div>
</section>
