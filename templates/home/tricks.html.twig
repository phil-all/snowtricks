<div class="container-fluid my-3" id="tricks">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
		{% for trick in tricks %}
			<div class="col content">
				<div class="card my-3">
					<svg class="bd-placeholder-img card-img-top" width="100%" height="220" role="img" preserveaspectratio="xMidYMid slice" focusable="false">
						<title>Placeholder</title>
						<rect width="100%" height="100%" fill="#868e96"></rect>
						<text x="5%" y="50%" fill="#dee2e6" dy=".3em">{{ trick.thumbnailPath }}</text>
					</svg>
					<div class="card-body d-flex justify-content-between">
						<h5 class="card-title">{{ trick.title }}</h5>
						{% if is_granted('ROLE_USER') %}
							<div>
								<a href="{{ path('app_trick_update', {"id": trick.id, "slug": trick.slug }) }}" class="btn btn-link">
									<i class="bi bi-pencil-fill"></i>
								</a>
								<a href="#" class="btn btn-link">
									<i class="bi bi-trash-fill"></i>
								</a>
							</div>
						{% endif %}
					</div>
					<a href="{{ path('app_trick_read', {"id": trick.id, "slug": trick.slug}) }}">
						{{ path('app_trick_read', {"id": trick.id, "slug": trick.slug }) }}
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
	{% if tricks|length > 15 %}
		<div class="d-flex justify-content-around">
			<a href="#" id="loadMore">
				<button class="btn btn-primary" type="button" disabled>
					<span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
					Load more
				</button>
			</a>
		</div>
		<div class="d-flex justify-content-end">
			<a href="#tricks" class="text-black-50">
				<svg width="64" height="32" fill="currentColor" class="bi bi-arrow-up-circle-fill" viewbox="0 0 16 16">
					<path d="M16 8A8 8 0 1 0 0 8a8 8 0 0 0 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>
				</svg>
			</a>
		</div>
	{% endif %}
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<script>
	$(document).ready(function () {
$(".content").slice(0, 15).show();
$("#loadMore").on("click", function (e) {
e.preventDefault();
$(".content:hidden").slice(0, 5).slideDown();
if ($(".content:hidden").length == 0) {
$("#loadMore").text("");
}
});
})
</script>
