<div class="container-fluid my-3" id="tricks">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
		{% for trick in tricks %}
			<div class="col content">
				<div class="card my-3">
					<svg class="bd-placeholder-img card-img-top" width="100%" height="220" role="img" preserveaspectratio="xMidYMid slice" focusable="false">
						<title>Placeholder</title>
						<rect width="100%" height="100%" fill="#868e96"></rect>
						<text x="5%" y="50%" fill="#dee2e6" dy=".3em">{{ trick.media.values.0.file }}</text>
					</svg>
					<div class="card-body d-flex justify-content-between">
						<h5 class="card-title">{{ trick.title }}</h5>
						<div>
							<a href="#" class="btn btn-link">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewbox="0 0 16 16">
									<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
								</svg>
								<a href="#" class="btn btn-link">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewbox="0 0 16 16">
										<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
										<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
									</svg>
								</a>
							</a>
						</div>
					</div>
					<a href="{{ path('home') }}trick/{{ trick.id }}/{{ trick.slug }}">{{ path('single_trick', {"id": trick.id, "slug": trick.slug }) }}</a>
				</div>
			</div>
		{% endfor %}
	</div>
	{% if tricks|length > 15 %}
		<div class="d-flex justify-content-around">
			<a href="#" id="loadMore">
				<button class="btn btn-primary" type="button" disabled>
					<span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
					Load more
				</button>
			</a>
		</div>
		<div class="d-flex justify-content-end">
			<a href="#tricks" class="text-black-50">
				<svg width="64" height="32" fill="currentColor" class="bi bi-arrow-up-circle-fill" viewbox="0 0 16 16">
					<path d="M16 8A8 8 0 1 0 0 8a8 8 0 0 0 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>
				</svg>
			</a>
		</div>
	{% endif %}
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<script>
	$(document).ready(function () {
$(".content").slice(0, 15).show();
$("#loadMore").on("click", function (e) {
e.preventDefault();
$(".content:hidden").slice(0, 5).slideDown();
if ($(".content:hidden").length == 0) {
$("#loadMore").text("");
}
});
})
</script>
