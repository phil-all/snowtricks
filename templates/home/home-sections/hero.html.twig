<section style="height: 100vh; background-image: url('{{ asset('img/hero.jpg') }}')" class="center-image bg-secondary">
	<div class="d-flex flex-column justify-content-around text-white home-hero-textbox">

		{% for message in app.flashes('success') %}
			<div class="container">
				<div class="alert alert-success alert-dismissible fade show" style="text-shadow: none" role="alert">
					<h3 class="alert-heading">Woohoo !</h3>
					<p class="fs-4"><i class="bi bi-check-circle-fill"></i> {{ message }}</p>
					<hr>
					<p>La communauté te remercie de ta contribution.</p>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>				
				</div>
			</div>
		{% endfor %}

		<div class="text-center">
			<h1 style="font-size: 3.5em" class="brand-font">
				<img src="{{ asset('img/white-logo.png') }}" height="87px" width="87px" />
				Snowtricks
			</h1>
			<h3>Le rendez-vous des passionnés de surf !</h3>
		</div>

		<div class="text-end mx-2">
			<a href="#tricks" class="btn btn-primary btn-rounded">
				<i class="bi bi-caret-down-fill"></i>
			</a>
		</div>

	</div>
</section>
